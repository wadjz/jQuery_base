  <script type="text/javascript">
  	window.onload = function(){
		/**
  		 * 把dom对象转化成jquery对象
  		 */
		var domObj = document.getElementById("username");//dom对象
		var jQueryObj = $(domObj); //该对象就是一个jquery对象
		alert(jQueryObj.attr("value"));	
	}
  </script> 
